<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.btcn_3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BTCN_3"> <!-- Sửa typo từ "btcn_3" thành "BTCN_3" -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Thêm thuộc tính này -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:exported="false"> <!-- Thêm thuộc tính này, mặc định là false vì không cần truy cập từ ngoài -->
        </activity>
    </application>

</manifest>